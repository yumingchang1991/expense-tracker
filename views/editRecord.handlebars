<form class="container my-3 text-center w-75" method="post" action="/records/{{record._id}}?_method=PUT">
  <div class="d-flex justify-content-between align-items-end">
    <h2 class="text-center">Editing Expense</h2>
    <h6 class="col-form-label">*Required</h6>
  </div>
  
  <div class="form-floating mb-3">
    <input type="text" class="form-control" id="name" name="name" placeholder="name@example.com" required
    value="{{#if record}}{{record.name}}{{/if}}">
    <label for="name">Name*</label>
  </div>
  
  <div class="form-floating mb-3">
    <input type="date" class="form-control" id="date" name="date" required
    value="{{#if record}}{{record.date}}{{/if}}">
    <label for="date">Date*</label>
  </div>

  <div class="form-floating mb-3">
    <select class="form-select" id="category" name="category" required>
      <option selected disabled hidden>Select</option>
      <option value="Utilities" {{#if (isCategorySelected "Utilities" )}}selected{{/if}}>Utilities</option>
      <option value="Groceries" {{#if (isCategorySelected "Groceries" )}}selected{{/if}}>Groceries</option>
      <option value="Transportation" {{#if (isCategorySelected "Transportation" )}}selected{{/if}}>Transportation
      </option>
      <option value="Entertainment" {{#if (isCategorySelected "Entertainment" )}}selected{{/if}}>Entertainment</option>
      <option value="Food" {{#if (isCategorySelected "Food" )}}selected{{/if}}>Food</option>
      <option value="Others" {{#if (isCategorySelected "Others" )}}selected{{/if}}>Others</option>
    </select>
    <label for="category">Category*</label>
  </div>

  <div class="form-floating mb-3">
    <input type="number" class="form-control" id="amount" name="amount" required
    value="{{#if record}}{{record.amount}}{{/if}}">
    <label for="amount">Amount*</label>
  </div>

  <button class="container btn btn-success mb-3" type="submit">Save Changes</button>
  <a href="/" class="container btn btn-danger mb-3">Cancel</a>

</form>