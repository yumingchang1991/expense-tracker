<form class="container my-3 text-center w-50" method="post" action="/records/{{record._id}}?_method=PUT">
  <div class="row">
    <small class="col-3 col-form-label">*必填欄位</small>
    <span class="col-9 fs-5 text-center">修改支出</span>
  </div>

  <div class="row my-3">
    <label class="col-3 fs-5 col-form-label" for="name">名稱*</label>
    <div class="col-9">
      <input class="fs-5 form-control" id="name" name="name" type="text" required
      value="{{#if record}}{{record.name}}{{/if}}">
    </div>
  </div>

  <div class="row my-3">
    <label class="col-3 fs-5 col-form-label" for="date">日期*</label>
    <div class="col-9">
      <input class="fs-5 form-control" id="date" name="date" type="date" required
        value="{{#if record}}{{record.date}}{{/if}}">
    </div>
  </div>

  <div class="row my-3">
    <label class="col-3 fs-5 col-form-label" for="category">類別*</label>
    <div class="col-9">
      <select class="fs-5 form-select" id="category" name="category" required>
        <option selected disabled hidden>Select</option>
        <option value="家居物業" {{#if (isCategorySelected "家居物業")}}selected{{/if}}>家居物業</option>
        <option value="交通出行" {{#if (isCategorySelected "交通出行")}}selected{{/if}}>交通出行</option>
        <option value="休閒娛樂" {{#if (isCategorySelected "休閒娛樂")}}selected{{/if}}>休閒娛樂</option>
        <option value="餐飲食品" {{#if (isCategorySelected "餐飲食品")}}selected{{/if}}>餐飲食品</option>
        <option value="其他" {{#if (isCategorySelected "其他")}}selected{{/if}}>其他</option>
      </select>
    </div>
  </div>

  <div class="row my-3">
    <label class="col-3 fs-5 col-form-label" for="amount">金額*</label>
    <div class="col-9">
      <input class="fs-5 form-control" id="amount" name="amount" type="number" required
        value="{{#if record}}{{record.amount}}{{/if}}">
    </div>
  </div>

  <div class="row my-3">
    <span class="col-3" display="hidden"></span>
    <div class="col-9">
      <button class="container btn btn-success" type="submit">儲存修改</button>
    </div>
  </div>

  <div class="row my-3">
    <span class="col-3" display="hidden"></span>
    <div class="col-9">
      <a href="/" class="container btn btn-danger mb-3">取消</a>
    </div>
  </div>

</form>