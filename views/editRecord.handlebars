<form class="container my-3 text-center w-50" method="post" action="/records/{{record._id}}?_method=PUT">
  <div class="row">
    <small class="col-3 col-form-label">*Required</small>
    <span class="col-9 fs-5 text-center">Edit Expense</span>
  </div>

  <div class="row my-3">
    <label class="col-3 fs-5 col-form-label" for="name">Name*</label>
    <div class="col-9">
      <input class="fs-5 form-control" id="name" name="name" type="text" required
      value="{{#if record}}{{record.name}}{{/if}}">
    </div>
  </div>

  <div class="row my-3">
    <label class="col-3 fs-5 col-form-label" for="date">Date*</label>
    <div class="col-9">
      <input class="fs-5 form-control" id="date" name="date" type="date" required
        value="{{#if record}}{{record.date}}{{/if}}">
    </div>
  </div>

  <div class="row my-3">
    <label class="col-3 fs-5 col-form-label" for="category">Category*</label>
    <div class="col-9">
      <select class="fs-5 form-select" id="category" name="category" required>
        <option selected disabled hidden>Select</option>
        <option value="Utilities" {{#if (isCategorySelected "Utilities" )}}selected{{/if}}>Utilities</option>
        <option value="Groceries" {{#if (isCategorySelected "Groceries" )}}selected{{/if}}>Groceries</option>
        <option value="Transportation" {{#if (isCategorySelected "Transportation" )}}selected{{/if}}>Transportation
        </option>
        <option value="Entertainment" {{#if (isCategorySelected "Entertainment" )}}selected{{/if}}>Entertainment</option>
        <option value="Food" {{#if (isCategorySelected "Food" )}}selected{{/if}}>Food</option>
        <option value="Others" {{#if (isCategorySelected "Others" )}}selected{{/if}}>Others</option>
      </select>
    </div>
  </div>

  <div class="row my-3">
    <label class="col-3 fs-5 col-form-label" for="amount">Amount*</label>
    <div class="col-9">
      <input class="fs-5 form-control" id="amount" name="amount" type="number" required
        value="{{#if record}}{{record.amount}}{{/if}}">
    </div>
  </div>

  <div class="row my-3">
    <span class="col-3" display="hidden"></span>
    <div class="col-9">
      <button class="container btn btn-success" type="submit">Save Changes</button>
    </div>
  </div>

  <div class="row my-3">
    <span class="col-3" display="hidden"></span>
    <div class="col-9">
      <a href="/" class="container btn btn-danger mb-3">Cancel</a>
    </div>
  </div>

</form>